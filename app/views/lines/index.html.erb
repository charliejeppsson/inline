
<!-- LIST OF SEARCH RESULTS -->
<div class="line-list-wrapper">
  <div class="container">
    <div class="row">
      <div class="line-list">
        <ul class="list-unstyled">

          <%if params[:search_value].nil? or params[:search_value] == ""  %>
            <% @lines.each do |line| %>
              <div class="col-xs-12 col-md-6">
                <li>
                  <h3><%= link_to line.title, line_path(line) %></h3>
                  <p><%= line.organization_name %></p>
                  <p><%= line.location %></p>
                </li>
              </div>
            <% end %>
          <% elsif params[:search_value] != nil %>
            <% @results.each do |line| %>
              <div class="col-xs-12 col-md-6">
                <li>
                  <h3><%= link_to line.title, line_path(line) %></h3>
                  <p><%= line.organization_name %></p>
                  <p><%= line.location %></p>
                </li>
              </div>
            <% end %>
          <% end %>

        </ul>
      </div>
    </div>
  </div>
</div>
