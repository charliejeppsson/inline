
<% people_in_front = line.appointments.count %>
<% est_time_left = people_in_front * line.avg_service_time %>

<% if est_time_left > 2  %>
  <div class="avatar two-plus" title="Hours left">2+</div>
<% elsif est_time_left <= 2.25 && est_time_left > 1.75 %>
  <div class="avatar two" title="Hours left">~2</div>
<% elsif est_time_left <= 1.75 && est_time_left > 1.25 %>
  <div class="avatar one-five" title="Hours left">~1.5</div>
<% elsif est_time_left <= 1.25 && est_time_left > 0.75 %>
  <div class="avatar one" title="Hours left">~1</div>
<% else %>
  <div class="avatar half" title="Hours left">~0.5</div>
<% end %>
