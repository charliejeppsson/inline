

  <div class="line-settings-wrapper">
    <h2 class="text-center">Edit your line</h2>
    <div class='col-xs-8 col-xs-offset-2 col-sm-6 col-sm-offset-3 col-md-4 col-md-offset-4 line-settings-wrapper'>
      <%= simple_form_for @line do |f| %>
        <%= f.error_notification %>

        <div class="form-inputs line-form">
          <%= f.input :title, required: true, autofocus: true %>
          <%= f.input :location, required: true, autofocus: true %>
          <%= f.input :start_time, as: :string, required: true, autofocus: true, input_html: {id: "datetimepicker1"} %>
          <%= f.input :end_time, as: :string, required: true, autofocus: true, input_html: {id: "datetimepicker2"} %>
          <%= f.input :avg_service_time, required: true, autofocus: true %>
          <%= f.input :organization_name, required: false, autofocus: true %>
          <%#= f.input :photo, as: :attachinary %>
          <%= f.input :photo %>
          <%= f.input :photo_cache, as: :hidden %>
          <%= f.hidden_field :user_id, value: current_user.id %>
        </div>

        <div class="form-actions">
          <%= f.button :submit, "Edit line", class: "btn my-btn btn-block"  %>
        </div>

        <%= link_to "Remove line", line_path(@line), method: :delete, class: "btn btn-red btn-block" %>
      <% end %>
    </div>
  </div>

